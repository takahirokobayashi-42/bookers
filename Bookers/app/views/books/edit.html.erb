<h1>Editing Book</h1>

<% if @book.errors.any? %>
    <div id="error-explation">
        <h2>2 errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
<% end %>


<%= form_with model:@book, local:true do |f| %>
<div class="text_field">
    <label for=book-title>Title</label>
</div>
    <%= f.text_field :title %>

<div class="text_field">
    <label for=book-body>Body</label>
</div>
    <%= f.text_area :body %></br>

    <%= f.submit "Update Book" %>
<% end %>

<div class="icon">
    <%= link_to "Show",book_path(@book) %> | <%= link_to "Back",books_path %>
</div>

