<body>
    <header>
        <h1>Books</h1>
    </header>
    <p class="notice">
     <%= notice %>
    </p>
    <table>
        <thead>
            <th>Title</th>
            <th>Body</th>
        </thead>

    <!--index-->
        <tbody>
            <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td>
                    <%= link_to "show", book_path(book) %>
                    <%= link_to "edit", edit_book_path(book) %>
                    <%= link_to "destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"}%>
                </td>
            </tr>
        </tbody>

        <% end %>
    </table>

<!--ここからnew-->

    <h1>New book</h1>


    <% if @book.errors.any? %>
    <div id="error-explation">
        <h2>2 errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
    <% end %>


    <%= form_with model:@book, local:true do |f| %>
        <div class="text_field">
            <label for=book-title>Title</label>
        </div>
            <%= f.text_field :title %>
        <div class="text_field">
            <label for=book-body>Body</label>
        </div>
        <%= f.text_area :body %></br>
        <%= f.submit 'Create Book' %>

        <% end %>

</body>